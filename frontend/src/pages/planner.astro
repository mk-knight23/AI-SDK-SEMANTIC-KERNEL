---
// Planner page
import BaseLayout from '../layouts/BaseLayout.astro';
import PlannerComponent from '../components/PlannerComponent';
---

<BaseLayout title="Planner">
	<div class="app">
		<Header />
		<main class="main">
			<div class="container">
				<div class="page-header">
					<h1>AI Planner</h1>
					<p>Plan and execute complex multi-step tasks with Semantic Kernel</p>
				</div>
				<PlannerComponent client:load />
			</div>
		</main>
	</div>
</BaseLayout>

<style>
	.main {
		min-height: calc(100vh - 4rem);
		padding: 2rem 0;
	}

	.page-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.page-header h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}

	.page-header p {
		color: var(--color-text-muted);
	}
</style>

<script>
	import Header from '../components/Header.astro';
</script>